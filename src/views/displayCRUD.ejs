<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>

    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
    </style>
  </head>
  <body>
    <table style="width: 100%;">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Action</th>
      </tr>

      <% for(var i=0; i<dataTable.length; i++) {%>
        <tr>
            <td><%= dataTable[i].email%></td>
            <td><%= dataTable[i].firstName%></td>
            <td><%= dataTable[i].lastName%></td>
            <td><%= dataTable[i].address%></td>
            <td>
              <a href="/edit-crud?id=<%= dataTable[i].id%>" class="btn-edit">Edit</a>
              <a href="/delete-crud?id=<%= dataTable[i].id%>" class="btn-edit">Delete</a>
            </td>
        </tr>
     <% } %>
    </table>
  </body>
</html>
